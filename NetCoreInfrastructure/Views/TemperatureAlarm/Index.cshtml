@section csses
    {
    <style>
        .el-table .warning-row {
            background: #ff6a00;
        }

        .el-table .success-row {
            background: #f0f9eb;
        }
    </style>
}

<div>
    选择烤箱
    <el-select v-model="oven" filterable placeholder="请选择">
        <el-option v-for="item in ovens"
                   :key="item.key"
                   :label="item.label"
                   :value="item.value">
        </el-option>
    </el-select>
    <el-button type="primary" v-on:click="Query">查询</el-button>
</div>
<el-table :data="tableData" border
          ref="multipleTable"
          tooltip-effect="dark"
          style="width: 100%"
          :default-sort = "{prop: 'status', order: 'descending'}"
          :row-class-name="tableRowClassName">
    <el-table-column prop="date"
                     label="日期"
                     width="180">
    </el-table-column>
    <el-table-column prop="tag"
                     label="温度点"
                     width="180">
    </el-table-column>
    <el-table-column prop="current_temperature"
                     label="实际温度"
                     width="180">
    </el-table-column>
    <el-table-column prop="predefined_temperature"
                     label="设定温度"
                     width="180">
    </el-table-column>
    <el-table-column prop="alarm_content"
                     label="报警内容"
                     width="180">
    </el-table-column>
    <el-table-column prop="status"
                     label="状态"
                     sortable
                     width="180">
    </el-table-column>

    <el-table-column label="操作"
                     width="100">
        <template slot-scope="scope">
            <el-button  v-if="scope.row.status == '发生'">解除</el-button>
        </template>
    </el-table-column>
   
</el-table>

